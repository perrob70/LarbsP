# ~/.config/neomutt/settings
# vim: filetype=muttrc

set my_name = "Perry"
set imap_check_subscribed
set mbox_type = Maildir
set mail_check = 60
set timeout = 0

set mailcap_path = ~/.config/neomutt/mailcap
set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt
set query_command = "khard email --parsable --search-in-source-files '%s'"

set sendmail = "/usr/bin/msmtp"
set use_from = yes
set envelope_from = yes

set editor = "nvim"
auto_view text/html

# UI / composing behavior
set pager_index_lines = 10
set pager_context = 3
set pager_stop
set menu_scroll
set tilde
unset markers

set edit_headers
set fast_reply
set askcc
set fcc_attach
set forward_format = "Fwd: %s"
set forward_decode
set attribution = "On %d, %n wrote:"
set reply_to
set reverse_name
set include
set forward_quote
set text_flowed

unset sig_dashes
unset mime_forward
unset help

set tmpdir = ~/Programs/neomutt/temp

# Misc behavior
unset confirmappend
set quit
unset mark_old
set beep_new
set pipe_decode
set thorough_search

# Status bar and sorting
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)?%?p? (%p postponed)? ]"
set date_format = "%d.%m.%Y %H:%M"
set sort = threads
set sort_aux = reverse-last-date-received
set uncollapse_jump
set sort_re

set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

# Charset
set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"

# Cursor & indicator
set arrow_cursor = no


